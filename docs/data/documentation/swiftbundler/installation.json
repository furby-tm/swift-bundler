          "inlineContent" : [
            {
              "text" : "Install the latest release of Swift Bundler using ",
              "type" : "text"
            },
            {
              "identifier" : "https:\/\/github.com\/yonaskolb\/Mint",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ".",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "mint install stackotter\/swift-bundler"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "content" : [
            {
              "inlineContent" : [
                {
                  "text" : "If you have previously installed Swift Bundler via the installation script you must delete the ",
                  "type" : "text"
                },
                {
                  "code" : "\/opt\/swift-bundler",
                  "type" : "codeVoice"
                },
                {
                  "text" : " directory (requires sudo).",
                  "type" : "text"
                }
              ],
              "type" : "paragraph"
            }
          ],
          "style" : "note",
          "type" : "aside"
        },
        {
          "anchor" : "Manual-installation",
          "level" : 2,
          "text" : "Manual installation",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Alternatively, you can install Swift Bundler manually for maximum control.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "git clone https:\/\/github.com\/stackotter\/swift-bundler",
            "cd swift-bundler",
            "",
            "swift build -c release",
            "cp .build\/release\/swift-bundler \/path\/to\/bin\/"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        }
      ],
